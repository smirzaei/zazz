@model IEnumerable<Zazz.Core.Models.Data.ClubReward>

@{
    ViewBag.Title = "Rewards List";

    var currentUserIsTheOwner = (bool)ViewBag.CurrentUserIsTheOwner;
}

<div class="container">

    <div class="page-header">
        <h2>Rewards</h2>
    </div>

    @if (currentUserIsTheOwner)
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }

    <table class="table table-condensed table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            if (!currentUserIsTheOwner && !item.IsEnabled)
            {
                continue;
            }
            
            <tr @(item.IsEnabled ? null : "style=opacity:0.4;")>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @if (currentUserIsTheOwner)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:|
                        if (item.IsEnabled)
                        {
                        @Html.ActionLink("Disable", "Disable", new { id = item.Id })
                        }
                        else
                        {
                        @Html.ActionLink("Enable", "Enable", new { id = item.Id })
                        }
                    }
                </td>
            </tr>
        }

    </table>

</div>
