@model ClubRewardScenarioViewModel

@{
    Layout = null;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.DropDownListFor(m => m.Scenario, Model.Scenario.EnumToSelectList(), new { @class = "span4" })
    @:they are awarded
    @Html.TextBoxFor(model => model.Amount, new { @class="span1"})
    @:points.
    @Html.ValidationMessageFor(model => model.Amount)

    <input class="btn" type="submit" value="Create" style="margin-left: 10px;"/>
}