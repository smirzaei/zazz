@using Zazz.Core.Models.Data
@using Zazz.Core.Models.Data.Enums
@model List<ScenariosViewModel>
@{
    ViewBag.Title = "Scenarios";
}

<div class="container">
    <div class="page-header">
        <h2>Point Reward Scenarios</h2>
    </div>
    
    <div>
        @if (Model.Count > 0)
        {
            <table>
            <thead>
                <tr><th>Scenario</th><th>Amount</th><th></th><th></th></tr>
            </thead>

            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Scenario.GetEnumDisplay()</td>
                    <td>@s.Amount</td>
                    <td><a href="#">Edit</a></td>
                    <td><a href="#">Remove</a></td>
                </tr>
            }
            
        </table>
        }
        
