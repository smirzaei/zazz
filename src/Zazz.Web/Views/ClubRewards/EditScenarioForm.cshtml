@model Zazz.Core.Models.Data.ClubPointRewardScenario

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.DropDownListFor(m => m.Scenario, Model.Scenario.EnumToSelectList(), new { @class = "span4" })
    @Html.TextBoxFor(model => model.Amount, new { @class="span1", @style="margin: 0 5px;"})
    @Html.ValidationMessageFor(model => model.Amount)

    <input class="btn" type="submit" value="Create" />
}