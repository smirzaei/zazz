@using PagedList.Mvc
@model AlbumViewModel
@{
    ViewBag.Title = "Photos";
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<div>
    <div class="page-header">
        <h3>Photos</h3>
    </div>

    <ul class="breadcrumb">
        <li><a href="~/album/list/@Model.UserId/1">Albums</a><span class="divider">/</span></li>
        <li class="active">@Model.AlbumName</li>
    </ul>

    <div class="margin-ten">
        @if (Model.IsOwner)
        {
            <p><strong>Upload New Photo</strong></p>
            using (Html.BeginForm("Upload", "Photo", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                
            <input type="hidden" name="albumId" value="@Model.AlbumId"/>
                
            <div class="control-group">
                <div class="editor-field">
                    <input type="file" name="image" />
                </div>
            </div>
            <div class="control-group">
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Description, new { @class = "span4", @placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.Description, null, new { @class = "help-inline" })
                </div>
            </div>
            
            <p>
                <button type="submit" class="btn btn-success">Submit</button>
            </p>
            }

            <hr />
        }

        <ul class="thumbnails">

            @foreach (var p in Model.Photos)
            {
                <li class="thumbnail">
                    <div class="photo-thumbnail">
                        <a href="@p.PhotoUrl" data-toggle="lightbox" data-target="#photo-@p.PhotoId">
                            <img src="@p.PhotoUrl" title="@p.PhotoDescription" />
                        </a>
                    </div>

                    @if (Model.IsOwner)
                    {
                        <div class="photo-hover">
                            <button title="Remove Photo" data-url="/photo/remove/@p.PhotoId"
                                        class="btn btn-info btn-block remove-photo-btn">
                                <i class="icon-remove"></i>
                            </button>
                        </div>
                    }

                </li>
                
                @Html.Partial("_LightBoxPartial", p)
            }
        </ul>

        <div class="clearfix"></div>
        <div class="text-center">
            @Html.PagedListPager(Model.Photos, page => Url.Action("Photos", new { id = Model.AlbumId, page }))
        </div>

    </div>

</div>
