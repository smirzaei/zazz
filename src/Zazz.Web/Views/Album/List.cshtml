@using PagedList.Mvc
@model AlbumListViewModel
@{
    ViewBag.Title = "Album List";
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<div>
    <div class="page-header">
        <h3>Albums</h3>
    </div>
    <ul class="breadcrumb">
        <li class="active">Albums<span class="divider">/</span></li>
    </ul>

    <div class="margin-ten">

        @if (Model.IsOwner)
        {
            <p><strong>Create a new album</strong></p>
            using (Html.BeginForm("CreateAlbum", "Album", FormMethod.Post, new { @class = "form-inline" }))
            {
            @Html.ValidationMessageFor(model => model.AlbumName, null, new { @class = "help-inline" })
            @Html.TextBoxFor(model => model.AlbumName, new { @class = "span5", @placeholder = "Album Name" })
            <button class="btn btn-success">Create</button>
            }

            <hr />
        }

        <ul class="thumbnails">

            @foreach (var album in Model.Albums)
            {
                @Html.Partial("_AlbumThumbnail", album)
            }

        </ul>

        <div class="text-center">
            @Html.PagedListPager(Model.Albums, page => Url.Action("List", new { page }))
        </div>

    </div>
</div>


