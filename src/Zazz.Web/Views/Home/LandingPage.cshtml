    <article>

        <div class="content-3">
            <header>
                <div class="row-fluid">
                    <div class="container">
                        <div class="row-fluid margin-top-20">
                            <div class="span4"></div>
                            <div class="span4 center-align">
                                <a href="#">
                                    <img src="/Images/home-page-logo.png"></a>
                            </div>
                            <div class="span4 margin-top-10">
                                <form class="form-inline text-right" id="login-form" action="@Url.Action("Login", "Account")" method="POST">
                                    @Html.AntiForgeryToken()
                                    <input type="text" name="Username" class="input-small" placeholder="Username">
                                    <input type="password" name="Password" class="input-small" placeholder="Password">
                                    <button type="submit" class="btn btn-primary">log in</button>
                                </form>
                                <div style="margin-top: -15px">
                                    <a class="pull-right" href="~/account/oauth/facebook/"><img src="~/Images/fb-login-btn.jpg"/></a>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid center-align">
                            <h1 class="lead-1">"Find out who's throwing the craziest parties.<br />
                                Stay up to date with all your favorite events"
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="top-line-2"></div>
            </header>
            <div class="nav white-bg" style="margin-bottom: 0;">
                <div class="container">
                    <div class="row">
                        <div class="span2"><a href="#">
                            <img src="/Images/home/Icon-png-01.png"></a></div>
