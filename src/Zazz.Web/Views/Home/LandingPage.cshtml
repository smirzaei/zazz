@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    ViewBag.Title = "TODO: Add page title and description.";
}

@section CSS
{
    <style>
        .carousel {
            border:0; 
        }
        .container {
            max-width: 990px !important;
        }
    </style>
}

<div class="content-3">
    <header>
        <div class="row-fluid">
            <div class="container">
                <div class="row-fluid margin-top-20">
                    <div class="span4"></div>
                    <div class="span4 center-align">
                        <a href="#"><img src="/Images/home-page-logo.png"></a>
                    </div>
                    <div class="span4 margin-top-10">
                        <form action="@Url.Action("Login", "Account")" method="POST">
                            @Html.AntiForgeryToken()
                            <input class="login-input" type="text" placeholder="Username" name="Username">
                            <input class="login-input  border-left-0" type="password" placeholder="Password" name="Password">
                            <button type="submit" class="login-btn-home">Login</button>
                        </form>
                    </div>
                </div>
                <div class="row-fluid center-align">
                    <h1 class="lead-1">
                        "Find out who's throwing the craziest parties.<br/>
                        Stay up to date with all your favorite events"
                    </h1>
                </div>
            </div>
        </div>
        <div class="top-line-2"></div>
    </header>
    <div class="nav white-bg" style="margin-bottom:0;">
        <div class="container" >
            <div class="row">
                <div class="span2"><a href="#"><img src="/Images/home/Icon-png-01.png"></a></div>
