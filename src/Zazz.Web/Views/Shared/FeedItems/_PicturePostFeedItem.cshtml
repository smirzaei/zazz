@model FeedViewModel
<div class="feed-item">
    <a href="~/user/profile/@Model.UserId">
        <img title="@Model.UserDisplayName" src="@Model.UserImageUrl" class="feed-user-img img-small-rounded" />
    </a>

    <div class="feed-content well well-small no-padding">

        <a data-toggle="lightbox" data-target="#photo-@Model.PhotoViewModel.PhotoId" href="@Model.PhotoViewModel.PhotoUrl">
            <img style="width: 100%" src="@Model.PhotoViewModel.PhotoUrl" />
        </a>

        @Html.Partial("_LightBoxPartial", Model.PhotoViewModel)
        
        <div title="@Model.Time.ToLongDateString() - @Model.Time.ToShortTimeString()" data-placement="right" class="pull-right font-verysmall" style="margin: 5px 5px 0 0;">@Model.Time.ToRelativeTime()</div>
        <div class="clearfix"></div>
        
        
        @*<ul class="feed-options">
            <li><a href="#"><i class="icon-question-sign"></i> Option 1</a></li>
            <li><a href="#"><i class="icon-question-sign"></i> Option 2</a></li>
            <li><a href="#"><i class="icon-question-sign"></i> Option 3</a></li>
        </ul>*@
        
        <div class="clearfix" style="margin-bottom: 10px;"></div>
        
        @Html.Partial("FeedItems/_FeedComments", Model.CommentsViewModel)

    </div>



</div>
