@model CommentsViewModel
@{
    Layout = null;
}
<div class="feed-comments-section">
    <div>
        <img title="You" src="@Model.CurrentUserPhotoUrl" class="img-small-rounded"/>
        <input data-id="@Model.ItemId" data-commentType="@Model.CommentType" type="text" class="comment-textbox" placeholder="Write a comment..." />
    </div>
    <ul class="feed-comments">

        @if (Model.Comments != null)
        {
            @Html.Partial("FeedItems/_CommentList", Model.Comments)
        }

    </ul>
    @if (Model.Comments != null && Model.Comments.Count >= 5)
    {
        <button data-id="@Model.ItemId" data-commentType="@Model.CommentType" class="btn btn-small load-comments-btn"><i class="icon-comments-alt"></i> More...</button>
    }

</div>
