@model EventViewModel
@{
    Layout = null;
}

<div class="event">
    <div class="media">
        <a href="@Url.Action("Show", "Events" , new {id = Model.Id, friendlySeoName = Model.Name.ToUrlFriendlyString()})" class="pull-left">
            <img class="event-img" src="@Model.ImageUrl.SmallLink"></a>
        <div class="media-body">
            <h1 class="event-h">@Model.Name</h1>
            <p class="event-p">
                @Model.Description
            </p>
            <div class="row-fluid">
                <div class="span6 event-socal">
                    <ul>
                        @*<li><a href="#"><img src="~/Images/p.png" /></a></li>*@
                        
                        @if (Model.IsFacebookEvent)
                        {
                            <li><a href="https://www.facebook.com/events/@Model.FacebookEventId.Value"><img src="~/Images/f.png" /></a></li>
                        }

                        
                        @*<li><a href="#"><img src="~/Images/t.png" /></a></li>*@
                    </ul>
                </div>
                <div class="span1"></div>
                <div class="span5 event-read-more">
                    <a href="#">READ MORE</a>
                </div>
            </div>
        </div>
    </div>
</div>
