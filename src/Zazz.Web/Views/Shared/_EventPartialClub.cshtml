@model EventViewModel
@{
    Layout = null;
}

<div class="event-title" style="color: black; font-weight: 500;">@Model.FormatDate</div>
<div class="event-club">

    @{
        if (Model.CoverLink != null)
        {
            <a href="@Url.Action("Show", "Events", new { id = Model.Id, friendlySeoName = Model.Name.ToUrlFriendlyString() })">
                <img class="event-cover-club" src="@Model.CoverLink" style="position:absolute; height:100%;" />
            </a>

        }
        else if (Model.CoverImage != null)
        {
            <a href="@Url.Action("Show", "Events", new { id = Model.Id, friendlySeoName = Model.Name.ToUrlFriendlyString() })">
                <img class="event-cover-club" src="@Model.CoverImage.MediumLink" style="position:absolute; height:100%;" />
            </a>
        }
    }

    @if (Model.ProfileImage != null)
    {
        <img class="event-profile-pic img-polaroid" src="@Model.ProfileImage.SmallLink" />
    }

