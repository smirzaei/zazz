@section Scripts
{
    <script type="text/javascript">
        var $res;
        $(document).on('click', '#photosTabLink', function() {
            var userId = @Model.UserId;
            var url = '/photos/ProfilePhotos/' + userId;


            $.ajax({
                url: url,
                success: function(res) {
                    $('#profilePhotosLoading').fadeOut();

                    $res = $($.parseHTML(res));
                    $res.find('.lightbox').each(function() {
                        var $lb = $(this);
                        var id = $lb.attr('id');

                        var check = $('#' + id);
                        if (check.length) {
                            $lb.remove();
                        }
                    });

                    $('.profile-photos').hide().html(res).fadeIn();

                },
                error: function() {
                    toastr.error('Request Failed!');
                }
            });
        });
    </script>
}