@using Zazz.Web.Controllers
@model NotificationsPageViewModel
@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<div>
    <div class="page-header">
        <h3>Notifications</h3>
    </div>
    
    <div class="margin-ten">
        @Html.Partial("_Notifications", Model.Notifications)
        
        @if (Model.Notifications.Count() == NotificationsController.NOTIFICATIONS_PAGE_SIZE)
        {
            <button id="load-notifications" style="margin-top: 25px;" type="button" class="btn btn-inverse btn-block">Show more...</button>
        }
        
    </div>

</div>

@section Scripts
{
    <script type="text/javascript">
        $(function() {
            markAllNotificationsAsRead();
        });
    </script>
}
