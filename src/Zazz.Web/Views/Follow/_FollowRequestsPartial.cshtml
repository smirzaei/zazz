@model IEnumerable<FollowRequestViewModel>
@{
    Layout = null;
}

@if (!Model.Any())
{
    <div class="text-center">
        <strong>You have no new follow requests</strong>
    </div>

}
else
{
    <table class="table table-striped">
        @foreach (var r in Model)
        {
            <tr>
                <td>
                    <a href="~/users/profile/@r.FromUserId" target="_blank">
                        <img style="max-width: 60px;max-height: 60px;" 
                            src="@Html.Action("GetVerySmallDisplayPicture", new { userId = r.FromUserId })" alt="@r.FromUsername"/>
                    </a>
                </td>
                <td style="padding-top: 29px; width: 230px;"><a href="~/users/profile/@r.FromUserId" target="_blank"><strong>@r.FromUsername</strong></a></td>
                <td style="padding-top: 22px;" class="text-right">
                    <button data-url="/follow/acceptfollow/@r.FromUserId" class="btn btn-primary pull-right btn-followrequest-action">Accept</button></td>
                <td style="padding-top: 22px;" class="text-right">
                    <button data-url="/follow/rejectfollow/@r.FromUserId" class="btn btn-followrequest-action">Reject</button></td>
            </tr>
        }
    </table>   
}