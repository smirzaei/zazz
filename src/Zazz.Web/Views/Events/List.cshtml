@model EventListViewModel
@{
    ViewBag.Title = "Events List";
}

<div class="container color-white-bg border-radius-5" style="padding: 0 20px 100px 20px;">
    <div class="row-fluid">
        <div class="span12 border-bottom-2">
            <div class="lead row-fluid">
                <div class="span4">
                    <h4>
                        <i class="icon-calendar icon-2x pull-left"></i>
                        Events
                    </h4>
                </div>
                <div class="offset6 span2 text-right" style="margin-top: 19px">
                    <a href="@Url.Action("Create", "Events")" class="btn">New Event</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid margin-top-10 margin-bottam-20">
        <div class="span6">

            <div class="row-fluid padding-top-17 margin-bottam-20">
                <div class="span12 text-center">
                    <span class="list-header">THIS WEEK
                    </span>
                </div>
            </div>

            @Html.Partial("_EventsListPartial", Model.WeekEvents)


        </div>


        <div class="span6">
            <div class="row-fluid padding-top-17 margin-bottam-20">
                <div class="span12 text-center">
                    <span class="list-header">THIS MONTH
                    </span>
                </div>
            </div>

            @Html.Partial("_EventsListPartial", Model.MonthEvents)


        </div>

    </div>

</div>