@model IEnumerable<FbPageViewModel>
@{
    Layout = null;
}

@if (Model.Any())
{
    <table class="table table-striped">
        @foreach (var p in Model)
        {
            <tr>
                <td style="padding-top: 12px; width: 80%;"><strong>@p.Name</strong></td>
                <td>
                    @if (p.IsLinked)
                    {
                        <button id="unlinkPageBtn" data-id="@p.Id" class="btn btn-danger">Unlink</button>
                    }
                    else
                    {
                        <button id="linkPageBtn" data-id="@p.Id" class="btn btn-success">Link</button>
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="text-center">No pages found.</div>
}

